<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" styleClass="game-background" stylesheets="@../../../../../game.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.sustech.students.ura.devproject.controller.GameViewController">
   <right>
      <VBox prefHeight="300.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="stepLabel" styleClass="game-title" text="步数">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="timeLabel" styleClass="game-title" text="剩余时间:">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> <!-- 根据需要调整内外边距 -->
               </VBox.margin>
            </Label>
            <Label fx:id="gradeLabel" styleClass="game-title" text="分数: 0">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> <!-- 调整边距以适应您的布局 -->
               </VBox.margin>
            </Label>
         </children></VBox>
   </right>
   <left>
      <VBox prefHeight="300.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <HBox prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="AIButton" mnemonicParsing="false" styleClass="game-button" text="自动走下一步" />
            <Button fx:id="ReviveButton" mnemonicParsing="false" styleClass="game-button" text="复活" />
            <Button fx:id="SaveButton" mnemonicParsing="false" styleClass="game-button" text="存档" />
            <Button fx:id="LoadButton" mnemonicParsing="false" styleClass="game-button" text="载入" />
            <Button fx:id="PauseButton" mnemonicParsing="false" styleClass="game-button" text="暂停" />
            <Button fx:id="RestartButton" mnemonicParsing="false" styleClass="game-button" text="重新开始" />
            <Button fx:id="QuitButton" mnemonicParsing="false" styleClass="game-button" text="退出游戏" />
            <Button fx:id="MoveUp" mnemonicParsing="false" styleClass="game-button" text="向上" />
            <Button fx:id="MoveDown" mnemonicParsing="false" styleClass="game-button" text="向下" />
            <Button fx:id="MoveRight" mnemonicParsing="false" styleClass="game-button" text="向右" />
            <Button fx:id="MoveLeft" mnemonicParsing="false" styleClass="game-button" text="向左" />
         </children>
      </HBox>
   </bottom>
   <center>
      <AnchorPane fx:id="gameViewCenter" prefHeight="200.0" prefWidth="200.0" styleClass="game-board" stylesheets="@../../../../../game.css" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin></AnchorPane>
   </center>
</BorderPane>
