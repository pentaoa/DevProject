<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.sustech.students.ura.devproject.controller.GameViewController">
    <center>

    </center>
   <right>
      <VBox prefHeight="300.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <VBox prefHeight="300.0" prefWidth="150.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <HBox prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <GridPane fx:id="GridPane" prefHeight="249.0" prefWidth="366.0" style="-fx-background-color: blue;" BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="SaveButton" mnemonicParsing="false" text="存档" />
            <Button fx:id="LoadButton" mnemonicParsing="false" text="载入" />
            <Button fx:id="PauseButton" mnemonicParsing="false" text="暂停" />
            <Button fx:id="RestartButton" mnemonicParsing="false" text="重新开始" />
            <Button fx:id="QuitButton" mnemonicParsing="false" text="退出游戏" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
